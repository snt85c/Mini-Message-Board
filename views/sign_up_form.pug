
extends layout

block content
    h1 #{title}
    h5 create new username and password
    form(action="", method="POST") 
        label(for='username') username:
            input(type ="text" name="username" placeholder = "enter username" required="true" style="width:90vw")
        label(for='password') password:
            input(type="password",name="password" placeholder="enter password" required="true" style="width:90vw")
        label(for='admin_password') admin password:
            input(type="password",name="admin_password" placeholder="enter admin password" style="width:90vw")    
        button(type="submit", style="margin-top:5px") SEND
    button(onclick="window.location.href='/'", style="margin-top:5px") back
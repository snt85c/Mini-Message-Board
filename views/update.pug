extends layout

block content
    h1 #{title}
    form(action='/updated/' + message._id, method="POST") 
        label(for='user') user:
            input(type ="text" name="user" required="true" style="width:90vw" placeholder=message.user)
        label(for='text') text:
            input(type="text",name="text" required="true" style="width:90vw" placeholder=message.text content)
        button(type="submit", style="margin-top:5px") SEND
    button(onclick="window.location.href='/'", style="margin-top:5px") back